# WondersTracker Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# PostgreSQL Database URL
# For local development with Docker: postgresql://wonder:wonder@localhost:5432/wonder_dev
# For Neon: postgresql://user:pass@ep-xxx.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://wonder:wonder@localhost:5432/wonder_dev

# JWT Secret Key (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# DISCORD OAUTH (Required for login)
# =============================================================================

DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=http://localhost:8000/api/v1/auth/discord/callback
FRONTEND_URL=http://localhost:5173

# =============================================================================
# OPTIONAL - Discord Webhooks
# =============================================================================

# Webhook for market updates (daily summaries, price alerts)
DISCORD_UPDATES_WEBHOOK_URL=

# Webhook for new listing notifications
DISCORD_NEW_LISTINGS_WEBHOOK_URL=

# =============================================================================
# OPTIONAL - AI Features
# =============================================================================

# OpenRouter API key for AI-generated market insights
OPENROUTER_API_KEY=

# =============================================================================
# OPTIONAL - Billing (Polar.sh)
# =============================================================================

# Polar API access token
POLAR_ACCESS_TOKEN=

# Webhook signature secret
POLAR_WEBHOOK_SECRET=

# Environment: 'sandbox' or 'production'
POLAR_ENVIRONMENT=sandbox

# =============================================================================
# OPTIONAL - Scraping Configuration
# =============================================================================

# Polling interval in minutes (default: 30)
SCRAPE_INTERVAL_MINUTES=30

# Max concurrent scrape workers (default: 3)
MAX_CONCURRENT_SCRAPES=3

# =============================================================================
# OPTIONAL - Email (Resend)
# =============================================================================

# Resend API key for transactional emails
RESEND_API_KEY=

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Debug mode (set to 'true' for development)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=DEBUG
