{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.tsx",
      "use": "@vercel/edge"
    }
  ],
  "routes": [
    { "src": "/api/og/(.+)", "dest": "/api/og/[cardId].tsx" },
    { "src": "/api/og", "dest": "/api/og.tsx" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
