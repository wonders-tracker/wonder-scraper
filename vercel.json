{
  "buildCommand": "cd frontend && npm install && npm run build:vercel",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install",
  "framework": null,
  "trailingSlash": false,
  "functions": {
    "frontend/_functions/**/*.ts": {
      "runtime": "@vercel/node@3"
    },
    "frontend/_functions/**/*.tsx": {
      "runtime": "@vercel/node@3"
    }
  },
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "/_functions/sitemap" },
    { "source": "/api/og/:cardId", "destination": "/_functions/og/[cardId]" },
    { "source": "/api/v1/:path*/", "destination": "https://wonder-scraper-production.up.railway.app/api/v1/:path*/" },
    { "source": "/api/v1/:path*", "destination": "https://wonder-scraper-production.up.railway.app/api/v1/:path*" },
    { "source": "/((?!_functions/).*)", "destination": "/index.html" }
  ]
}
